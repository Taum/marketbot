# Database
DATABASE_URL="postgresql://user:password@localhost:5432/marketbot"

# Session secret for authentication (generate a random string)
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET="your-secret-key-here"

# Google OAuth (optional - for Sign in with Google feature)
# Get these from: https://console.cloud.google.com/apis/credentials
ALLOW_GOOGLE_CONNECTION=false
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3000/auth/google/callback"
